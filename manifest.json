{
	"manifest_version": 2,
	"name": "ETag Stoppa",
	"description": "Prevents Firefox from storing ETags by removing ETag response headers unconditionally and without exceptions.",
	"version": "0.1",
	"applications": {
		"gecko": {
			"id": "etag-stoppa@cm.org",
			"strict_min_version": "52.0"
		}
	},
    "icons": {
         "32": "icons/etag32.png",
         "64": "icons/etag64.png"
    },
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	],
	"background": {
		"scripts": [ "etag-stoppa.js" ]
	}
}
